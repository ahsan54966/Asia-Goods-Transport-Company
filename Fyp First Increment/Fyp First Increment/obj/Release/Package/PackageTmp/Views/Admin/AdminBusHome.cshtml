@model IEnumerable<Fyp_First_Increment.Models.Bus>

@{
    ViewBag.Title = "AdminBusHome";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item text-white">
        <a href="/Admin/Index" class="text-info">Dashboard</a>
    </li>
    <li class="breadcrumb-item active text-info">Bus Home</li>
</ol>
<div class="container-fluid">
    <!-- Breadcrumbs-->



    <div class="row">
        <div class="col-sm-2">
            @Html.ActionLink("Add Bus", "AdminBusAddNew", "Admin", new { companyid = Session["user_Id"] }, new { @Class = "btn btn-info" })
        </div>
        <div class="offset-sm-5 col-sm-5">

            <br />

        </div>
    </div>

    <p class="text-success">@TempData["message"]</p>
    <div class="card mb-3">
        <div class="card-header text-info font-weight-bold">
            <i class="fa fa-table"></i> Bus Information
        </div>
        <div class="card-body">
            <div class="table-responsive table-sm">
                <table class="table table-bordered table-sm table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-info font-weight-bold">
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleNumber)*@
                                Number
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleSize)*@
                                Size
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleManufacturer)*@
                                Manufacturer
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleRoute)*@
                                Route
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleCapacity)*@
                                Capacity
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.BusModel)*@
                                Model
                            </th>
                            <th scope="col">Action</th>
                            <th scope="col">Action</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr class="text-info font-weight-bold">
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleNumber)*@
                                Number
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleSize)*@
                                Size
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleManufacturer)*@
                                Manufacturer
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleRoute)*@
                                Route
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.VehicleCapacity)*@
                                Capacity
                            </th>
                            <th scope="col">
                                @*@Html.DisplayNameFor(model => model.BusModel)*@
                                Model
                            </th>
                            <th scope="col">Action</th>
                            <th scope="col">Action</th>
                            <th scope="col">Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.VehicleNumber)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.VehicleSize)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.VehicleManufacturer)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.VehicleRoute)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.VehicleCapacity)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.BusModel)
                                </td>
                                <td scope="row">
                                    @Html.ActionLink("Edit", "AdminBusAddNew", new { id = item.VehicleNumber, idtype = 1, companyid = Session["user_Id"] }, new { @Class = "btn-sm btn-warning" })
                                </td>
                                <td scope="row">
                                    @Html.ActionLink("Detail", "AdminBusDetail", new { id = item.VehicleNumber, companyid = Session["user_Id"] }, new { @Class = "btn-sm btn-info" })
                                </td>
                                <td scope="row">
                                    @Html.ActionLink("Delete", "AdminDeleteBus", new { id = item.VehicleNumber, companyid = Session["user_Id"] }, new { @Class = "btn-sm btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>


                @*@section scripts
                        {
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("#dataTable").DataTable();
                            });
                        </script>
                    }*@


            </div>
        </div>
    </div>
</div>
