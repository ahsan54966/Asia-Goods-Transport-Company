@model Fyp_First_Increment.ViewModel.Admin.RideViewModel
@{
    ViewBag.Title = "AdminBusAddRide";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item text-white">
        <a href="/Admin/Index" class="text-info">Dashboard</a>
    </li>
    <li class="breadcrumb-item active text-info">Bus Ride</li>
</ol>

<div class="container-fluid">
    

    <div class="card card-body mx-auto ">
        <div class="card-header text-center bg-info text-white font-weight-bold">Add New Bus Ride</div>
        <div class="card-body ">
            @using (Html.BeginForm("AdminBusAddRide", "Admin", FormMethod.Post, new { }))
            {
                <p>
                    @TempData["message"]
                </p>
                <br />
                <div class="form-group">
                    <br />
                    <h5 class="text-info font-weight-bold">Ride Information</h5>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">
                            <label for="BusVehicleNumber">Vehicle No</label>
                            <br />
                            @Html.DropDownListFor(m => m.RideVehicleNumber, new SelectList(Model.Vehicles, "VehicleNumber", "VehicleNumber"), "Select Bus", new { @Class = "form-control", @Id = "BusVehicleNumber" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideVehicleNumber)</p>
                        </div>
                        <div class="col-md-4">
                            <label for="BusDriverName">Driver Name</label>
                            <br />
                            @Html.DropDownListFor(m => m.RideDriverId, new SelectList(Model.Drivers, "UserId", "UserFirstName"), "Select Drivers", new { @Class = "form-control", @Id = "BusDriverName" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideDriverId)</p>
                        </div>

                        <div class="col-md-4">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">
                            <label for="ConductorName">Condector Name</label>
                            @Html.TextBoxFor(m => m.RideConductorName, new { @class = "form-control", @Placeholder = "", @Id = "ConductorName", @minlength = "4", @maxlength = "15" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideConductorName)</p>
                        </div>
                        <div class="col-md-4">
                            <label for="RidePassengers">No of Passengers</label>
                            @Html.TextBoxFor(m => m.RidePassengers, new { @class = "form-control", @Placeholder = "ie 45", @Id = "RidePassengers", @minlength = "1", @maxlength = "2" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RidePassengers)</p>
                        </div>

                        <div class="col-md-4">
                            <label for="RIdePassengerFare">Fare Per Passenger</label>
                            @Html.TextBoxFor(m => m.RidePassengerFare, new { @class = "form-control", @Placeholder = "iee 700", @Id = "RIdePassengerFare", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RidePassengerFare)</p>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <h5 class="text-info font-weight-bold">Location</h5>
                    @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">*@
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">

                            <label for="RideSource">start location</label>
                            @Html.TextBoxFor(m => m.RideSource, "", new { @Class = "form-control", @Id = "RideSource", @minlength = "4", @maxlength = "25" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideSource)</p>
                        </div>
                        <div class="col-md-1">

                        </div>
                        <div class="col-md-3">
                            <h6 class="font-weight-bold">To</h6>

                        </div>
                        <div class="col-md-4">
                            <label for="RideDestination">End Location</label>
                            @Html.TextBoxFor(m => m.RideDestination, "", new { @Class = "form-control", @Id = "RideDestination", @minlength = "4", @maxlength = "25" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideDestination)</p>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <br />
                    <h5 class="text-info font-weight-bold">EXPENSES</h5>

                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="RideRouteCharge">Driver charge</label>
                            @Html.TextBoxFor(m => m.RideDriverCharge, "", new { @Class = "form-control", @Id = "RideRouteCharge", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideDriverCharge)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="RideCommision">Commision Charge</label>
                            @Html.TextBoxFor(m => m.RideCommisionCharge, "", new { @Class = "form-control", @Id = "RideCommision", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideCommisionCharge)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="DieselQuanitity">Deisel QUT</label>
                            @Html.TextBoxFor(m => m.RideDieselQuantity, "", new { @Class = "form-control", @Id = "DieselQuanitity", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "3" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideDieselQuantity)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="DieselExpenses">Deisel EXP</label>
                            @Html.TextBoxFor(m => m.RideDieselExpense, "", new { @Class = "form-control", @Id = "DieselExpenses", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideDieselExpense)</p>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="ToolPlazaExpenses">ToolPlaza EXP</label>
                            @Html.TextBoxFor(m => m.RideTaxExpense, "", new { @Class = "form-control", @Id = "ToolPlazaExpenses", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideTaxExpense)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="MobileExpenses">Mobile EXP</label>
                            @Html.TextBoxFor(m => m.RideMobileExpense, "", new { @Class = "form-control", @Id = "MobileExpenses", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideMobileExpense)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="FoodExpenses">Food EXP</label>
                            @Html.TextBoxFor(m => m.RideFoodExpense, "", new { @Class = "form-control", @Id = "FoodExpenses", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideFoodExpense)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="MaintainaceExpenses">Mainteness EXP </label>
                            @Html.TextBoxFor(m => m.RideMaintainanceExpense, "", new { @Class = "form-control", @Id = "MaintainaceExpenses", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideMaintainanceExpense)</p>
                        </div>
                    </div>

                </div>
                <br />
                <div class="form-group">
                    <br />
                    <h5 class="text-info font-weight-bold">Ride Charge</h5>
                    @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">*@
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">
                            <label for="RideFare">Total Incom</label>
                            @Html.TextBoxFor(m => m.RideFare, "", new { @Class = "form-control", @Id = "RideFare", @Placeholder = "i.e 1000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideFare)</p>
                        </div>
                        <div class="col-md-4">
                            <label for="RideDate">Ride Date</label>
                            @Html.TextBoxFor(m => m.RideDate, DateTime.Now.ToString("dd/MM/yyyy"), new { @Class = "form-control", @Id = "RideDate", @type = "date" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.RideDate)</p>
                        </div>
                        <div class="col-md-4">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.CompanyId, new { @Value = Session["user_Id"] })
                            @Html.HiddenFor(m => m.RideId)
                            @Html.HiddenFor(m => m.RideType, new { @Value = "Bus" })
                            @Html.HiddenFor(m => m.RideDetail, new { @Value = "Invisible" })
                            @Html.HiddenFor(m => m.RideSeller, new { @Value = "Invisible" })
                            @Html.HiddenFor(m => m.RideBuyer, new { @Value = "Invisible" })
                            @Html.HiddenFor(m => m.RideProdit, new { @Value = "0" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">

                            <input type="submit" value="Submit" class="btn btn-info font-weight-bold" />
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>




            }

        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCUCOhuEzH731AU1Qu_DJ3tRJ1sZGy2fjI&sensor=false&libraries=places"></script>
<script type="text/javascript">
    google.maps.event.addDomListener(window, 'load', function () {
        var options = {
            types: ['(regions)'],
            componentRestrictions: { country: "pak" }
        };

        var destination = document.getElementById('RideDestination');
        var place1 = new google.maps.places.Autocomplete(destination, options);
        var source = document.getElementById('RideSource');
        var place2 = new google.maps.places.Autocomplete(source, options);

    });
</script>

