@model IEnumerable<Fyp_First_Increment.Models.Ride>

@{
    ViewBag.Title = "AdminBusRide";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item text-white">
        <a href="/Admin/Index" class="text-info">Dashboard</a>
    </li>
    <li class="breadcrumb-item active text-info">Bus Ride</li>
</ol>
<div class="container">

    <div class="row">
        <section class="col-7">
            @Html.ActionLink("Add Bus Ride", "AdminBusAddRide", "Admin", new { @Class = "btn btn-default bg-info text-white" })
        </section>
        <section class="col-5"></section>
    </div>
    <div class="row">


        <div class="card mb-3 mt-3">
            <div class="card-header">
                <i class="fa fa-table"></i>
                <span class="text-info font-weight-bold"> Bus Ride Detail</span>
                <p>
                    @TempData["message"]
                </p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                        <thead class="text-info">
                            <tr>
                                <th scope="col">
                                    Source
                                    @* @Html.DisplayNameFor(model => model.RideSource)*@
                                </th>
                                <th scope="col">
                                    Destination
                                    @*@Html.DisplayNameFor(model => model.RideDestination*@
                                </th>
                                <th scope="col">
                                    DriverId
                                    @* @Html.DisplayNameFor(model => model.RideDriverId)*@
                                </th>
                                <th scope="col">
                                    Veh #
                                    @* @Html.DisplayNameFor(model => model.RideVehicleNumber)*@
                                </th>
                                <th scope="col">
                                    Prodit
                                    @*@Html.DisplayNameFor(model => model.RideProdit)*@
                                </th>

                                <th scope="col">
                                    Fare
                                    @* @Html.DisplayNameFor(model => model.RideFare)*@
                                </th>
                                <th scope="col">
                                    Date
                                    @* @Html.DisplayNameFor(model => model.RideDate)*@
                                </th>
                                <th scope="col">
                                    ConductorName
                                    @* @Html.DisplayNameFor(model => model.RideConductorName)*@
                                </th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>
                            </tr>

                        </thead>
                        <tfoot>
                            <tr class="text-info">
                                <th scope="col">
                                    Source
                                    @* @Html.DisplayNameFor(model => model.RideSource)*@
                                </th>
                                <th scope="col">
                                    Destination
                                    @*@Html.DisplayNameFor(model => model.RideDestination*@
                                </th>
                                <th scope="col">
                                    DriverId
                                    @* @Html.DisplayNameFor(model => model.RideDriverId)*@
                                </th>
                                <th scope="col">
                                    Veh #
                                    @* @Html.DisplayNameFor(model => model.RideVehicleNumber)*@
                                </th>
                                <th scope="col">
                                    Prodit
                                    @*@Html.DisplayNameFor(model => model.RideProdit)*@
                                </th>

                                <th scope="col">
                                    Fare
                                    @* @Html.DisplayNameFor(model => model.RideFare)*@
                                </th>
                                <th scope="col">
                                    Date
                                    @* @Html.DisplayNameFor(model => model.RideDate)*@
                                </th>
                                <th scope="col">
                                    ConductorName
                                    @* @Html.DisplayNameFor(model => model.RideConductorName)*@
                                </th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>
                            </tr>

                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideSource)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideDestination)
                                    </td>

                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideDriverId)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideVehicleNumber)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideProdit)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideFare)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideDate)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.RideConductorName)
                                    </td>
                                    <td scope="row">
                                        @Html.ActionLink("Edit", "AdminBusAddRide", new { id = item.RideId, companyid = Session["user_Id"] }, new { @Class = "btn-sm btn-warning" })
                                    </td>
                                    <td scope="row">
                                        @Html.ActionLink("Details", "AdminBusRideDetail", new { id = item.RideId, companyid = Session["user_Id"] }, new { @Class = "btn-sm btn-info" })
                                    </td>
                                    <td scope="row">
                                        @Html.ActionLink("Delete", "AdminBusDeleteRide", new { id = item.RideId, companyid = Session["user_Id"] }, new { @Class = "btn-sm btn-danger" })
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
